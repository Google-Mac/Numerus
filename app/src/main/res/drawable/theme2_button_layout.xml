<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ce3434"
                android:endColor="#fb7073"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#f2c2d2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/color2Primary"
                android:endColor="@color/color2PrimaryDark"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/color2Accent" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#6f4949"
                android:endColor="#ff595c"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#f2c2d2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>