<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#79ea6f"
                android:endColor="#367a2e"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#145a0a" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/color3Primary"
                android:endColor="@color/color3PrimaryDark"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/color3Accent" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#297722"
                android:endColor="#216219"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#0e4107" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>