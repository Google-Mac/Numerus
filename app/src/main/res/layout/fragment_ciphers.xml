<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/caesar_button"
        android:text="@string/caesar_cipher"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/rot_13_button"
        android:text="@string/rot_13"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/vigenere_button"
        android:text="@string/vigen_re_cipher"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_weight="3"/>

    <Button
        android:id="@+id/column_trans_button"
        android:text="@string/columnar_transposition"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_weight="4"/>

</LinearLayout>
