<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.projects.numerus.googlemac.numerus"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/numerus_app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NavigationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ThemesActivity"
            android:label="@string/title_activity_themes">
        </activity>
        <activity
            android:name=".CaesarCipherActivity"
            android:label="@string/title_activity_caesar_cipher"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".BinaryActivity"
            android:label="@string/title_activity_binary"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".VigenereActivity"
            android:label="@string/title_activity_vigenere"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ColumnTransActivity"
            android:label="@string/title_activity_column_trans"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ShareActivity">
        </activity>
        <activity
            android:name=".DeepLinkActivity"
            android:label="@string/app_name"
            android:theme="@style/ThemeOverlay.MyDialogActivity">

            <!-- [START deep_link_filter] -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:host="example.com" android:scheme="http"/>
                <data android:host="example.com" android:scheme="https"/>
            </intent-filter>
            <!-- [END deep_link_filter] -->
        </activity>
    </application>

</manifest>